{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "customConditions": ["typescript"],
    "allowJs": true,
    "esModuleInterop": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": ["ES2017", "DOM"],
    "types": ["vite/client"],
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "**/*.d.ts"],
  "exclude": ["node_modules", "test", "dist"]
}
